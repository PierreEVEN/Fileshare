extends layout

block content
    div.file-view
        div.repos-toolbar
            div(id='toolbar-path-container')
                div(id="current-path")
                    p Chargement...

            div(id="viewport_toolbar").tool-buttons
        div.hseparator
        div.repos_content
            div(id='file-list-box')
                div(id='mobile-selection-header')
                    button(id='mobile-selection-close-button')
                        img(src='/images/icons/icons8-back-50.png')
                    p(id='mobile-selection-info') 5
                    div(id='mobile-selection-action-buttons')
                div(id='file-list-scroll-box')
                    div(id='file-list')
            div(id='directory-description')

    if locals.force_show_upload
        script(type='module').
            upload.open_or_update_modal();