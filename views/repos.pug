extends layout

block content
    if common.selected_repos
        div.file-view
            div.repos-toolbar
                div(id="current-path")
                    p Chargement...

                div(id="viewport_toolbar").tool-buttons
                    if common.selected_repos
                        button(onclick=`window.open('/archive/?repos=${common.selected_repos.access_key}&directory=' + (selector.get_current_directory() ? selector.get_current_directory().absolute_path() : ''), '_blank').focus();`)
                            img(src='/images/icons/icons8-download-96.png', alt='download')
                    if common.user && common.selected_repos.owner === common.user.id
                        button.delete(onclick=`upload.open_or_update_modal()`).plus-button +
                        button(onclick=`edit_repos.edit_repos('${common.selected_repos.access_key}')`).plus-button
                            img(src='/images/icons/icons8-edit-96.png', alt='modifier')
            div.hseparator
            div.repos_content
                div(id='file-list')
                div(id='directory-description')

        if locals.force_show_upload
            script(type='module').
                upload.open_or_update_modal();