block item-preview
    div.item-preview
        if item.mimetype.startsWith('image/')
            img(src="#{item.url}", alt="#{item.name}")
        else if item.mimetype === 'text/plain'
            img(src="https://img.icons8.com/?size=512&id=12053", alt="document")
        else if item.mimetype === 'application/pdf'
            img(src="https://img.icons8.com/?size=512&id=13417", alt="document")
        else if item.mimetype === 'application/octet-stream'
            img(src="https://img.icons8.com/?size=512&id=38992", alt="document")
        else if (item.mimetype.startsWith('video/'))
            video(id="my-video", class="video-js", preload="auto", width="100", height="100", data-setup="{}")
                if (item.mimetype.startsWith('video/mp4'))
                    source(src="#{item.url}", type="video/mp4")
                if (item.mimetype.startsWith('video/webm'))
                    source(src="#{item.url}", type="video/webm")
                p(class="vjs-no-js") To view this video please enable JavaScript, and consider upgrading to a web browser that
                a(href="https://videojs.com/html5-video-support/", target="_blank") supports HTML5 video
        else
            p #{item.name}
