<div style="height: 100%; position: relative">
    <h1 style="text-align: center; padding: 10px; margin: 0; background-color: #5b5b5b; color: #f0f0f0">{{title}}</h1>
    <div style="display: flex; flex-direction: row; overflow-y: auto; background-color: #5b5b5b; position: absolute; top:59px; left: 0; right: 0; bottom: 0">
        <div style="background-color:#bdb4a4; min-width: 40px; text-align: center; height: fit-content; min-height: 100%">
            {{#each lines}}
                <p style="margin: 0; height: 1.2rem">{{this.line}}</p>
            {{/each}}
        </div>
        <div style="background-color: #d7d6d3; width: 100%; height: fit-content; min-height: 100%; overflow-x: auto">
            {{#each lines}}
                <p style="margin: 0 0 0 {{this.indent}}em; height: 1.2rem">{{this.text}}</p>
            {{/each}}
        </div>
    </div>
</div>