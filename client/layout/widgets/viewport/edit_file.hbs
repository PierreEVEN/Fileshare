<h1>Modifier le fichier {{item.name}}</h1>
<form action="{{path}}" method="post">
    <div class="field">
        <label for='name'>
            <input type="text" name="name" placeholder="Nom" id="name" required value="{{item.name}}">
        </label>
    </div>
    <div class="field">
        <label for='description'>
            <textarea name="description" placeholder="Description" id="description" rows="8">{{item.description}}</textarea>
        </label>
    </div>
    <input type="submit" value="Valider">
</form>