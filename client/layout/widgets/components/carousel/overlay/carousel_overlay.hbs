<div class="carousel-overlay">
    <button class="floating-top-right cancel-button" onclick="{{ctx 'close_carousel(event)'}}">X</button>
    <div class="details-panel">
        <div class="head">
            <div class="stats">
                {{typeicon item.mimetype}}
                <div class="substats">
                    <p id="item-mime-type">{{item.mimetype}}</p>
                    <p id="item-size">Poids : {{file_size}}</p>
                </div>
            </div>
            <h1 id="item-title">{{item.name}}</h1>
            <div class="stats">
            </div>
        </div>
    </div>
</div>