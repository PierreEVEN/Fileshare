<h1>Envoyer des fichiers</h1>
<div class="file-list-box"></div>
<div class="bottom-buttons">
    <button class="plus-button" onclick="window.upload.open_file_dialog()">+</button>
    <button class="cancel-button" onclick="window.modal.close_modal()">Annuler</button>
    <button class="confirm-button" onclick="{{ctx 'send()'}}">Envoyer</button>
    <div class="global-status" style="display: none">
        <div class="progress-container">
            <p>Initialisation...</p>
            <div class="progress-bar"></div>
        </div>
        <button onclick="{{ctx 'pause(this)'}}"><img src="/images/icons/icons8-pause-30.png" alt="pause"></button>
    </div>
</div>